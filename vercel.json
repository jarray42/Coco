{
  "functions": {
    "app/api/notifications/cron/route.ts": {
      "maxDuration": 60
    },
    "app/api/notifications/monitor/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron-reset-quotas",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/notifications/cron",
      "schedule": "0 */24 * * *"  // Every 12 hours instead of every 30 minutes
    }
  ]
}
